.nested-fields.equipment-meeting-room-fields

  .well.well-compact
    .form-inline
      .equipment_from_list{:style => "display: inline;"}
        = f.association :equipment, collection: Equipment.order(:name), prompt: 'Choose an existing equipment', label: false
      = link_to_add_association 'or create a new equipment', f, :equipment, class: 'add-equipment'
      = link_to_remove_association f, class: 'remove-equipment btn btn-danger btn-xs' do
        .glyphicon.glyphicon-remove-sign
